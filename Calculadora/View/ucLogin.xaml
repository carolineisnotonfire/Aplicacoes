<UserControl x:Class="Calculadora.View.ucLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Usuário:&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.826,0.708" Margin="55,128,0,0" FontFamily="Arial" FontSize="16"/>
        <Label Content="Senha:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="55,196,0,0" FontFamily="Arial" FontSize="16"/>
        <TextBox x:Name="tbtLogin" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" Margin="149,131,0,0"/>
        <PasswordBox Name="tbtSenha" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="231" Margin="149,200,0,0" MaxLength="25" PasswordChar="*"/>
        <Button Content="Entrar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="231" Margin="149,293,0,0" Click="Button_Click"/>
    </Grid>
</UserControl>
